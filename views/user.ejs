<script type="text/javascript">
  

  let search = document.getElementById('search')
  let media = document.getElementsByClassName('media')
  let sendBtn = document.getElementById('send')
   let receiveBtn = document.getElementById('receive')

/*Input Feature*/
  search.addEventListener('input',(e) => {
    Array.from(media).forEach((event)=>{
      let head = event.getElementsByTagName('h5')[0]
     
      if (head.innerText.includes(e.target.value)) {
          event.style.display='flex'
      }else{
          event.style.display='none'

      }
    })
  });


let send_document = document.getElementsByClassName('send')
sendBtn.addEventListener('click',(e) => {
  Array.from(media).forEach((event)=>{
    if (event.classList.contains('send')) {
        event.style.display='flex'
    }else{
        event.style.display='none'

    }
  })
});



receiveBtn.addEventListener('click',(e) => {
  Array.from(media).forEach((event)=>{
    if (event.classList.contains('receive')) {
        event.style.display='flex'
    }else{
        event.style.display='none'

    }
  })
});



</script>

